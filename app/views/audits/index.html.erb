    <div class="page-header"></div>
                         
    <% @audits.each do |audit| %>
    <div class="container">
    <div class="row-fluid">
    <div class="col-lg-6 col-md-6 col-lg-offset-1">
   
     <small>
       
      <div class="panel panel-default" >
      <% audit.findings.each do |finding| %>  
      <%if finding.status_id != "Closed"%>
      <% break %>
      <%end %>  
      <% end  %>
      <%#= (audit.start_date..audit.end_date).cover?(Time.now)%>
      
      <div class="panel-heading" style="background:#ecf0f1">
      <strong style="font-size:16px; color:#2980b9"> <%= audit.organiation_name %></strong> - <strong style="font-size:14px;"> <%= audit.department_name %></strong>
                
      <span class="label label-success pull-right">
      <%if (audit.start_date.to_i..audit.end_date.to_i).include?(Time.now.to_i) %>
         
      <%= "In Progress" %> 
      <%elsif audit.start_date.to_i > Time.now.to_i %>
      <%= "Not Started"%>
      <%elsif Time.now.to_i > audit.end_date.to_i   %>  
      <%= "Audit Completed" %>
      <%end%> 
      
       </span>
       </div>
      
      <div class="panel-body" style="background:#ecf0f1">
      <span class="label label-default">Audit   # <%= audit.id %></span> - <strong>Auditor: </strong> <%= audit.auditor_name %> | <strong>Auditee: </strong><%= audit.auditee_name %>
      </div>

      <div class="panel-footer" style="background:#ecf0f1">  
      <div class="meta">
      <p>
      <%= time_ago_in_words(audit.created_at) + " ago" %>  -    

                    <% if audit.start_date.to_i > Time.now.to_i %>
                    <%= link_to "Modify", edit_audit_path(audit), class: "btn btn-link" %>  | 
                    <%= link_to "Delete", audit, class: "btn btn-link", method: :delete, data: { Confirm: "Are you sure"} %> |
                     
                    <%= link_to "View Finding", audit, class: "btn btn-link btn-sm disabled" %>
                    
                    <%= link_to "Add Finding", new_audit_finding_path(audit.id), class: "btn btn-primary btn-sm pull-right disabled" %>  
                    <% else %>  
                    <%= link_to "Modify", edit_audit_path(audit), class: "btn btn btn-link disabled" %>  |
                    <%= link_to "Delete", audit, class: "btn btn btn-link disabled", method: :delete, data: { Confirm: "Are you sure"} %> |
                     <%= link_to "View Finding", audit, class: "btn btn-link btn-sm" %>
                  
                     <%= link_to new_audit_finding_path(audit.id), class: "btn btn-default btn-sm pull-right" do %>  
                     <span class="glyphicon glyphicon-plus-sign"></span> Create new finding
                     <%end%>
                    <%end%>  
                     </p>
                         
                     </div>
                     </div>
               </div> 
    <div class="page-header"></div>
        </div>


    </small>

 </div>

 </div>

 </div>
    <% end %>
   
