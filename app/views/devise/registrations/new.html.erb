<br/>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
<div class="row-fluid">

        <div class="col-lg-4">
        
            <div class="media">
            <a class="pull-left" href="#">
            <i class="fa fa-briefcase fa-4x"></i>
            </a>
            <div class="media-body">
            <h4 class="media-heading">InstaAudits</h4>
             <label style="color:#bdc3c7">Create audits and assign findings instantly. Audits takes less than a minute to create</label>
            </div>
            </div>
            <br/>
            
            <div class="media">
            <a class="pull-left" href="#">
            <i class="fa fa-upload fa-4x"></i>
            </a>
            <div class="media-body">
            <h4 class="media-heading">DirectUpload</h4>
             <label style="color:#bdc3c7">Upload your findings in microsoft excel format, just in case you need to upload multiple findings </label>
            </div>
            </div>
            <br/>
            
            <div class="media">
            <a class="pull-left" href="#">
            <i class="fa fa-search-plus fa-4x"></i>
            </a>
            <div class="media-body">
            <h4 class="media-heading">SearchSpeed</h4>
             <label style="color:#bdc3c7">Search by Audits, findings, auditors or auditees easily </label>
            </div>
            </div>
            <br/>
            
        </div>
        
             
        <div class="col-lg-5 col-md-5 col-lg-offset-1">
            <div class="panel panel-default">
       
             <div class="panel-heading" style="background:#4F575D; color:#ffffff" ><span><i class="fa fa-user fa-lg"></i> <strong> Start your free trail </strong></span></div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                    
                     <div class="form-group">
                       <small> <label for="inputPassword3" class="col-sm-3 control-label">
                            Profile name</label></small>
                        <div class="col-sm-8">
                            <%= f.input :profile_name, :autofocus => true, label: false %>
                        </div>
                    </div>
                    <div class="form-group">
                       <small> <label for="inputEmail3" class="col-sm-3 control-label">
                            Email</label></small>
                        <div class="col-sm-8">
                            <%= f.input :email,  class: "form-control input-lg", label: false  %>
                        </div>
                    </div>
                    <div class="form-group">
                       <small> <label for="inputPassword3" class="col-sm-3 control-label">
                            Password</label></small>
                        <div class="col-sm-8">
                            <%= f.input :password, label: false %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <small><label for="inputPassword3" class="col-sm-3 control-label">
                            Confirm Password</label></small>
                        <div class="col-sm-8">
                            <%= f.input :password_confirmation, label: false %>
                        </div>
                    </div>
                    
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                              <%= f.button :submit, 'Sign up',  class: "btn btn-success btn-default" %>
                             
                            
                        </div>
                    </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>
</div>
<% end %>
